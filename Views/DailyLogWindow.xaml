<Window x:Class="_365WPF.Views.DailyLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_365WPF.Views"
        mc:Ignorable="d"
        Title="DailyLogWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock Text="How well did you read today (1-10) ? "/>
        <Slider Minimum="1" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True"/>
        <TextBlock Text="How well did you exercise today (1-10) ? "/>
        <Slider Minimum="1" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True"/>
        <TextBlock Text="How well did you eat healthy today (1-10) ? "/>
        <Slider Minimum="1" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True"/>
        <TextBlock Text="How well did you sleep today (make a guess) (1-10) ? "/>
        <Slider Minimum="1" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True"/>

        <Button Content="Save Log" Margin="10"/>
    </StackPanel>
</Window>
