<UserControl x:Class="_365WPF.Views.UserControls.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_365WPF.Views.UserControls"
             mc:Ignorable="d" 
             Height="20" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Last saved here" FontSize="16" Grid.Column="0"/>
        <TextBlock Text="Today's Date" FontSize="16" Grid.Column="1"/>
        <TextBlock Text="Time" FontSize="16" Grid.Column="2"/>
    </Grid>

</UserControl>
